<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity"
    android:orientation="vertical"
    >



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="invisible"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/todo"
       />

    <Button
        android:id="@+id/compute_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/compute"

        />

    <Button
        android:id="@+id/print_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/print"
         />

    <Button
        android:id="@+id/user_send_print_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/usersendprint" />

    <Button
        android:id="@+id/finish_print_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/finish" />
    <Button
        android:id="@+id/onemore_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/onemore" />

    <TextView
        android:id="@+id/count_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</LinearLayout>