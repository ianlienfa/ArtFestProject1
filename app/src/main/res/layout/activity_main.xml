<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:foregroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/admin_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:text="@string/admin"
        app:layout_constraintBaseline_toBaselineOf="@+id/sendOpen"
        app:layout_constraintEnd_toEndOf="@+id/camera_open" />

    <Button
        android:id="@+id/camera_open"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="110dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp"
        android:foregroundTint="#FFFFFF"
        android:scaleType="fitCenter"
        android:text="@string/open_camera"
        android:textColor="#00FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sendOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="52dp"
        android:text="@string/sendmail"
        app:layout_constraintBottom_toTopOf="@+id/camera_open"
        app:layout_constraintEnd_toStartOf="@+id/admin_open" />

</androidx.constraintlayout.widget.ConstraintLayout>